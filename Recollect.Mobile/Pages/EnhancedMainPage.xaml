<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="Recollect.Mobile.Pages.EnhancedMainPage"
             Title="Recollect Adventure Tracker"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            
            <!-- Header Section -->
            <Frame BackgroundColor="{DynamicResource PrimaryColor}" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🗺️ Recollect Adventure Tracker" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Track your adventures with AI-powered stories!" 
                           FontSize="14" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Opacity="0.9"/>
                </StackLayout>
            </Frame>

            <!-- Adventure Status -->
            <Frame BackgroundColor="{DynamicResource SecondaryColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="Adventure Status" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="AdventureStatusLabel" 
                           Text="Ready to start your adventure!" 
                           FontSize="16" 
                           HorizontalOptions="Center" 
                           TextColor="{DynamicResource TextColor}"/>
                    <Label x:Name="AdventureStatsLabel" 
                           Text="" 
                           FontSize="14" 
                           HorizontalOptions="Center" 
                           TextColor="{DynamicResource SecondaryTextColor}"/>
                </StackLayout>
            </Frame>

            <!-- Quick Actions -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                
                <!-- Start/Stop Adventure -->
                <Button x:Name="StartStopButton" 
                        Text="🚀 Start Adventure" 
                        BackgroundColor="{DynamicResource SuccessColor}" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="60"
                        Grid.Column="0" 
                        Grid.Row="0"
                        Clicked="OnStartStopAdventureClicked"/>

                <!-- Voice Recording -->
                <Button x:Name="VoiceRecordButton" 
                        Text="🎤 Record Voice" 
                        BackgroundColor="{DynamicResource AccentColor}" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="60"
                        Grid.Column="1" 
                        Grid.Row="0"
                        Clicked="OnVoiceRecordClicked"/>

                <!-- Take Photo -->
                <Button x:Name="TakePhotoButton" 
                        Text="📸 Take Photo" 
                        BackgroundColor="{DynamicResource InfoColor}" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="60"
                        Grid.Column="0" 
                        Grid.Row="1"
                        Clicked="OnTakePhotoClicked"/>

                <!-- Record Video -->
                <Button x:Name="RecordVideoButton" 
                        Text="🎥 Record Video" 
                        BackgroundColor="{DynamicResource WarningColor}" 
                        TextColor="White" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        CornerRadius="10" 
                        HeightRequest="60"
                        Grid.Column="1" 
                        Grid.Row="1"
                        Clicked="OnRecordVideoClicked"/>
            </Grid>

            <!-- Media Gallery -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="📱 Recent Media" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <CollectionView x:Name="MediaCollectionView" 
                                   HeightRequest="200" 
                                   BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <Frame BackgroundColor="{DynamicResource SurfaceColor}" 
                                           CornerRadius="8" 
                                           Padding="10"
                                           HasShadow="True">
                                        <StackLayout Orientation="Horizontal" Spacing="10">
                                            <Image Source="{Binding Thumbnail}" 
                                                   WidthRequest="60" 
                                                   HeightRequest="60" 
                                                   Aspect="AspectFill"/>
                                            <StackLayout VerticalOptions="Center" Spacing="5">
                                                <Label Text="{Binding Name}" 
                                                       FontSize="14" 
                                                       FontAttributes="Bold"/>
                                                <Label Text="{Binding Type}" 
                                                       FontSize="12" 
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                                <Label Text="{Binding Timestamp}" 
                                                       FontSize="10" 
                                                       TextColor="{DynamicResource SecondaryTextColor}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Voice Recording Status -->
            <Frame x:Name="VoiceRecordingFrame" 
                   BackgroundColor="{DynamicResource AccentColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True"
                   IsVisible="False">
                <StackLayout>
                    <Label Text="🎤 Voice Recording Active" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="VoiceRecordingDurationLabel" 
                           Text="00:00" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Button Text="⏹️ Stop Recording" 
                            BackgroundColor="White" 
                            TextColor="{DynamicResource AccentColor}" 
                            FontAttributes="Bold" 
                            CornerRadius="8" 
                            Clicked="OnStopVoiceRecordingClicked"/>
                </StackLayout>
            </Frame>

            <!-- Adventure Map -->
            <Frame BackgroundColor="{DynamicResource CardBackgroundColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🗺️ Adventure Map" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <maps:Map x:Name="AdventureMap" 
                              HeightRequest="300" 
                              IsEnabled="True"/>
                </StackLayout>
            </Frame>

            <!-- Story Generator -->
            <Frame BackgroundColor="{DynamicResource PrimaryColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🎭 Generate Adventure Story" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Transform your adventure into an animated story!" 
                           FontSize="14" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Opacity="0.9"/>
                    <Button Text="✨ Generate Story" 
                            BackgroundColor="White" 
                            TextColor="{DynamicResource PrimaryColor}" 
                            FontAttributes="Bold" 
                            CornerRadius="8" 
                            HeightRequest="50"
                            Clicked="OnGenerateStoryClicked"/>
                </StackLayout>
            </Frame>

            <!-- Settings -->
            <Frame BackgroundColor="{DynamicResource SurfaceColor}" 
                   CornerRadius="10" 
                   Padding="15"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="⚙️ Settings" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <Button Text="🔧 Server Configuration" 
                            BackgroundColor="{DynamicResource SecondaryColor}" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="8" 
                            HeightRequest="50"
                            Clicked="OnSettingsClicked"/>
                    <Button Text="📊 View Statistics" 
                            BackgroundColor="{DynamicResource InfoColor}" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            CornerRadius="8" 
                            HeightRequest="50"
                            Clicked="OnStatisticsClicked"/>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>
</ContentPage>
