<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Recollect.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Recollect.Mobile"
    xmlns:pages="clr-namespace:Recollect.Mobile.Pages"
    Title="Recollect">

    <TabBar>
        <ShellContent Title="Map" Icon="map.png" Route="MapPage" ContentTemplate="{DataTemplate pages:MapPage}" />
        <ShellContent Title="Media" Icon="camera.png" Route="MediaPage" ContentTemplate="{DataTemplate pages:MediaPage}" />
        <ShellContent Title="Notes" Icon="note.png" Route="NotesPage" ContentTemplate="{DataTemplate pages:NotesPage}" />
        <ShellContent Title="Review" Icon="review.png" Route="ReviewPage" ContentTemplate="{DataTemplate pages:ReviewPage}" />
        <ShellContent Title="Settings" Icon="settings.png" Route="SettingsPage" ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>
